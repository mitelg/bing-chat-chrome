{
    "manifest_version": 3,
    "name": "Bing AI in Chrome",
    "description": "Use Bing AI in Chrome",
    "version": "1.0",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "permissions": ["webRequest", "declarativeNetRequestWithHostAccess"],
  "host_permissions": ["http://*.bing.com/*", "https://*.bing.com/*"]
}